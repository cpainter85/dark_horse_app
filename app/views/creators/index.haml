.container
  .page-header
    %h1 Creators

  .container.text-center.pagination
    =will_paginate @volumes

  .well
    .row
      %ul
        -@creators.each do |creator|
          %li
            =link_to(image_tag(creator.profile_picture_thumb_url && creator.profile_picture_thumb_url != 'http://static.comicvine.com/uploads/scale_avatar/0/1/1-male-good-large.jpg' && !(creator.profile_picture_thumb_url.include? 'question_mark') ? creator.profile_picture_thumb_url : 'no_image_available_thumb.jpg', class: 'img-rounded profile-thumb'), creator_path(creator))
            =link_to("#{creator.name}", creator_path(creator))
            =creator.short_description && !creator.short_description.empty? ? "- #{creator.short_description}" : ''

  .container.text-center.pagination
    =will_paginate @volumes
